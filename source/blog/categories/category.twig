---
layout: default
title: Classement par categorie
generator: [posts_category_index, pagination]
pagination:
    provider: page.categoried_posts

---
{% block title %}{{ page.title }} "{{ page.category }}"{% endblock %}
{% block content %}

<h1><span class="text-small text-muted">Catégorie : </span>"{{ page.category }}"</h1>
<hr>

{% for post in page.pagination.items %}
<article class="accueil">
    <a class="h1" href="{{ site.url }}{{ post.url }}">{{ post.title }}</a>
    {% for category in post.meta.categories %}
    <span class="label label-{{category}} text-muted">
        <a href="{{ site.url }}/blog/categories/{{ category|url_encode(true) }}" title="Voir tous les articles de la catégorie: {{ category }}">{{ category }}</a>
    </span>
    {% endfor %}
</article>
{% endfor %}


{% endblock content %}
